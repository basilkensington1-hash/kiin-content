{
  "font_stack": {
    "heading": {
      "primary": "Inter",
      "fallbacks": ["system-ui", "-apple-system", "BlinkMacSystemFont", "Segoe UI", "Roboto", "sans-serif"],
      "weights": [400, 500, 600, 700],
      "description": "Clean, friendly sans-serif - approachable but professional"
    },
    
    "body": {
      "primary": "Source Sans Pro", 
      "fallbacks": ["system-ui", "-apple-system", "BlinkMacSystemFont", "Segoe UI", "Roboto", "sans-serif"],
      "weights": [300, 400, 600],
      "description": "Highly readable body text - warm and human"
    },
    
    "accent": {
      "primary": "Poppins",
      "fallbacks": ["Inter", "system-ui", "sans-serif"], 
      "weights": [400, 500, 600],
      "description": "For special moments - friendly and rounded"
    }
  },
  
  "typography_scale": {
    "h1": {
      "size": "2.5rem",
      "line_height": "1.2", 
      "weight": 600,
      "font": "heading"
    },
    "h2": {
      "size": "2rem",
      "line_height": "1.3",
      "weight": 600, 
      "font": "heading"
    },
    "h3": {
      "size": "1.5rem",
      "line_height": "1.4",
      "weight": 500,
      "font": "heading"
    },
    "h4": {
      "size": "1.25rem", 
      "line_height": "1.4",
      "weight": 500,
      "font": "heading"
    },
    "body_large": {
      "size": "1.125rem",
      "line_height": "1.6",
      "weight": 400,
      "font": "body"
    },
    "body": {
      "size": "1rem",
      "line_height": "1.6", 
      "weight": 400,
      "font": "body"
    },
    "body_small": {
      "size": "0.875rem",
      "line_height": "1.5",
      "weight": 400,
      "font": "body"
    },
    "caption": {
      "size": "0.75rem",
      "line_height": "1.4",
      "weight": 400,
      "font": "body"
    }
  },
  
  "usage_guidelines": {
    "heading_font": "Use for all headers, titles, and navigation",
    "body_font": "Use for all body text, descriptions, and content",
    "accent_font": "Use sparingly for special callouts or branding moments",
    "line_height": "Generous line spacing for readability and breathing room",
    "accessibility": "Minimum 16px body text, strong contrast ratios"
  },
  
  "web_imports": {
    "google_fonts": "https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Source+Sans+Pro:wght@300;400;600&family=Poppins:wght@400;500;600&display=swap"
  }
}